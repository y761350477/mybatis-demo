<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StudentDao">
	<select id="findAll" resultType="entity.Student">
		select * from demo_student
	</select>
	<insert id="insert">
		insert into demo_student values(#{studentId},#{name},#{age},#{mark},#{classId})
	</insert>

	<!--多对一操作：没什么好说的，就是查询的Student结果中的Class信息是一样的-->
	<select id="findAll1" resultMap="c">
		select c.classid,c.classname,c.subject,s.studentid,s.name,s.age,s.mark,s.classid from demo_class c,demo_student s where c.classid=s.classid
	</select>
	<resultMap type="entity.Student" id="c">
		<id property="studentId" column="studentId"></id>
		<result property="classId" column="classid"></result>
		<result property="name" column="name"></result>
		<result property="mark" column="mark"></result>
		<result property="age" column="age"></result>
		<association property="cl" javaType="entity.Class">
		<id property="classId" column="classid"></id>
		<result property="className" column="classname"></result>
		<result property="subJect" column="subject"></result>
		</association>
	</resultMap>
</mapper>